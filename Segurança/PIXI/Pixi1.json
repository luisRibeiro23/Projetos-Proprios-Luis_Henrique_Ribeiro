{
  "openapi": "3.0.0",
  "info": {
    "title": "PIXI 1",
    "version": "1.0.0",
    "description": "API da atividade PIXI"
  },
  "servers": [
    {
      "url": "http://localhost:8090"
    }
  ],
  "paths": {
    "/api/login": {
      "post": {
        "summary": "Login no sistema PIXI",
        "requestBody": {
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "user": {
                    "type": "string",
                    "example": "pixiadmin"
                  },
                  "pass": {
                    "type": "string",
                    "example": "adminpixi"
                  }
                },
                "required": ["user", "pass"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login bem-sucedido. Token JWT retornado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Token is a header JWT"
                    },
                    "token": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
